#!/bin/sh

if [ `php -v | head -n1 | cut -d' ' -f2 | grep "^7.1"` ] ; then
    brew unlink php71
    brew link php56
    sed -i -e 's/#LoadModule php5_module \/usr\/local\/opt\/php56\/libexec\/apache2\/libphp5.so/LoadModule php5_module \/usr\/local\/opt\/php56\/libexec\/apache2\/libphp5.so/' /usr/local/etc/apache2/2.4/httpd.conf
    sed -i -e 's/LoadModule php7_module \/usr\/local\/opt\/php71\/libexec\/apache2\/libphp7.so/#LoadModule php7_module \/usr\/local\/opt\/php71\/libexec\/apache2\/libphp7.so/' /usr/local/etc/apache2/2.4/httpd.conf
else
    brew unlink php56
    brew link php71
    sed -i -e 's/LoadModule php5_module \/usr\/local\/opt\/php56\/libexec\/apache2\/libphp5.so/#LoadModule php5_module \/usr\/local\/opt\/php56\/libexec\/apache2\/libphp5.so/' /usr/local/etc/apache2/2.4/httpd.conf
    sed -i -e 's/#LoadModule php7_module \/usr\/local\/opt\/php71\/libexec\/apache2\/libphp7.so/LoadModule php7_module \/usr\/local\/opt\/php71\/libexec\/apache2\/libphp7.so/' /usr/local/etc/apache2/2.4/httpd.conf
fi
